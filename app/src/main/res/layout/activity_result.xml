<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">

<TextView
    android:textColor="@color/purple_700"
    android:layout_marginTop="16dp"
    android:text="Seu IMC e"
    android:textStyle="bold"
    android:textAlignment="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textview_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:text="27.104!"
        android:textAlignment="center"
        android:textSize="38sp" />

    <TextView
        android:id="@+id/textview_classificacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAlignment="center"
        tools:text="Classificacao: Normal"
        android:textSize="18sp"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/material_on_background_disabled"
        android:text="VEJA ABAIXO A TABELA:" />

    <TextView
        android:layout_marginStart="16dp"
        android:textColorHighlight="@color/material_on_background_disabled"
        android:text="MENOR QUE 18.5 ABAIXO DO PESO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:textColor="@color/material_on_background_disabled"/>

    <TextView
        android:layout_marginStart="16dp"
        android:textColorHighlight="@color/material_on_background_disabled"
        android:text="ENTRE 18.5 A 24.9  NORMAL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_on_background_disabled"/>
    <TextView
        android:layout_marginStart="16dp"
        android:textColorHighlight="@color/material_on_background_disabled"
        android:text="ENTRE 25 A 29.9.    SOBREPESO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_on_background_disabled"/>
    <TextView
        android:layout_marginStart="16dp"
        android:textColorHighlight="@color/material_on_background_disabled"
        android:text="ENTRE 30 A 34.9.    OBESIDADE GRAU I"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_on_background_disabled"/>
    <TextView
        android:layout_marginStart="16dp"
        android:textColorHighlight="@color/material_on_background_disabled"
        android:text="ENTRE 35 A 39.9.    OBESIDADE GRAU II"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_on_background_disabled"/>
    <TextView
        android:layout_marginStart="16dp"
        android:textColorHighlight="@color/material_on_background_disabled"
        android:text="MAIOR QUE 40.       OBESIDADE GRAU III"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_on_background_disabled"/>

</LinearLayout>